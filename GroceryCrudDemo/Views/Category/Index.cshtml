@model List<Category>   // This line is the *type* of the model
@{
    ViewData["Title"] = "Index";
}

<h1>Categories</h1>

<a href="/category/addform">Add Category</a>

<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Category cat in Model) {
            <tr>
                <td>@cat.name</td>
                <td>
                    <a href="">Details</a>
                    <a href="">Edit</a>
                    <a href="">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
